    $(document).ready(function () {
        //reportWindowSize();
        $('.btn-copy').off('click').on('click', function () {
            let text = $(this).data('value');
            copyClipboard(text);
        })

        $('.inputNode').off().on('keypress', function () {
            if ($(this).val().length >= 40)
                helper.showErr("Mô tả quá dài vui lòng nhập không vượt quá 40 ký tự");
        })
    })

    function addNote(id) {
        $('#divNote' + id).removeClass('d-none');
        $('#note' + id).removeAttr('readonly');
        $('#divTextarea' + id).addClass('col-md-10');
        $('#divTextarea' + id).removeClass('col-md-12');
        $('#note' + id).removeClass('bg-transparent text-white border-0');
        $('#divBtnSave' + id).removeClass('d-none');
        $('#note' + id).focus();
    }

    function saveNote(id) {
        let note = $('#note' + id).val();
        if (note && note.length > 40) {
            helper.showErr("Mô tả quá dài vui lòng nhập không vượt quá 40 ký tự");
            return
        }
        $.ajax({
            url: '/Package/SaveNote',
            method: 'POST',
            dataType: 'json',
            data: { id, note },
            beforeSend: function () {
                stopLoading();
            },
            success: function (res) {
                if (res) {
                    $('#note' + id).attr('readonly', 'readonly');
                    $('#note' + id).addClass(' bg-transparent text-white border-0');
                    $('#divBtnSave' + id).addClass('d-none');
                    $('#divTextarea' + id).addClass('col-md-12');
                    $('#divTextarea' + id).removeClass('col-md-10');
                    helper.showSuc("Cập nhật thành công", false);
                }
            },
            error: function (err) {
                console.log(err)
            },
            complete: function () {
                stopLoading(true);
            },
        })
    }

    function checkStatus(code, times) {
        $.ajax({
            url: '/Package/CheckAvailableSearch',
            method: 'GET',
            dataType: 'json',
            data: { code },
            beforeSend: function () {
                stopLoading();
            },
            success: function (res) {
                if (res.error == 1) {
                    helper.showErr(res.msg);
                    return;
                }
                if (res.error == 2) {
                    Swal.fire({
                        title: "Chú ý",
                        text: res.msg,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Đồng ý",
                        cancelButtonText: "Từ chối"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            location.href = "/admin/package/QueryOrderStatus?code=" + code;
                        }
                    });
                    return;
                }
                if (res.error == 3) {
                    //Chưa đăng ký theo dõi sát kiện
                    if (res.firsttime) {
                        //Lần đầu
                        if (res.times == 0) {
                            if (res.data == 0) {
                                Swal.fire({
                                    title: "Chú ý",
                                    text: "Bạn đã hết lượt tra cứu miễn phí, tiếp tục sẽ tốn phí 500đ?",
                                    icon: "warning",
                                    showCancelButton: true,
                                    confirmButtonColor: "#3085d6",
                                    cancelButtonColor: "#d33",
                                    confirmButtonText: "Đồng ý",
                                    cancelButtonText: "Từ chối"
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        location.href = "/package/QueryOrderStatus?code=" + code;
                                    }
                                });
                            } else {
                                Swal.fire({
                                    title: "Chú ý",
                                    text: "Sẽ mất 1 điểm truy cứu khi bạn kiểm tra kiện hàng, bạn có muốn tiếp tục kiểm tra kiện " + code + " không?",
                                    icon: "warning",
                                    showCancelButton: true,
                                    confirmButtonColor: "#3085d6",
                                    cancelButtonColor: "#d33",
                                    confirmButtonText: "Đồng ý",
                                    cancelButtonText: "Từ chối"
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        location.href = "/package/QueryOrderStatus?code=" + code;
                                    }
                                });
                            }
                        }
                        //Lần 2
                        else {
                            Swal.fire({
                                title: "Chú ý",
                                text: "Bạn nhớ đăng ký gửi thông báo các trạng thái kiện hàng để theo dõi sát hơn nhé",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonColor: "#3085d6",
                                cancelButtonColor: "#d33",
                                confirmButtonText: "Đồng ý",
                                cancelButtonText: "Từ chối"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    location.href = "/package/QueryOrderStatus?code=" + code;
                                }
                            });
                        }
                    }
                    //Đã đăng ký
                    else {
                        Swal.fire({
                            title: "Chú ý",
                            text: "Bạn đã đăng ký theo sát trạng thái kiện hàng, hãy yên tâm chờ thông báo nhé, hoặc bạn có thể bấm Đồng ý để vẫn có thể kiểm tra lại.",
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonColor: "#3085d6",
                            cancelButtonColor: "#d33",
                            confirmButtonText: "Đồng ý",
                            cancelButtonText: "Từ chối"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.href = "/package/QueryOrderStatus?code=" + code;
                            }
                        });
                    }
                }

            },
            error: function (err) {
                console.log(err)
            },
            complete: function () {
                stopLoading(true);
            },
        })
    }

    function cancel(id) {
        $.ajax({
            url: '/Package/Cancel',
            type: 'POST',
            data: { id },
            beforeSend: function () {
                stopLoading();
            },
            // other AJAX options here
            success: function (result) {
                if (result.isError)
                    helper.showErr(result.message)
                else
                    helper.showSuc(result.message)
            },
            error: function (xhr, status, err) {
                // error handling
            }, complete: function () {
                stopLoading(true);
            }
        });
    }

    function Restore(id) {
        $.ajax({
            url: '/Package/Restore',
            type: 'POST',
            data: { id },
            beforeSend: function () {
                stopLoading();
            },
            // other AJAX options here
            success: function (result) {
                if (result.isError)
                    helper.showErr(result.message)
                else
                    helper.showSuc(result.message)
            },
            error: function (xhr, status, err) {
                // error handling
            }, complete: function () {
                stopLoading(true);
            }
        });
    }

    function Delete(id) {
        Swal.fire({
            title: "Bạn có chắc muốn xóa kiện này?",
            icon: "warning",
            showCancelButton: true,
            CancelButtonText: "Không",
            confirmButtonText: "Có",
            allowOutsideClick: false,
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Package/Delete',
                    type: 'POST',
                    data: { id },
                    // other AJAX options here
                    success: function (result) {
                        if (result.isError)
                            helper.showErr(result.message)
                        else
                            helper.showSuc(result.message)
                    },
                    error: function (xhr, status, err) {
                        // error handling
                    }
                });
            }
        });
    }
</script>
