@using KGQT.Models.temp
@using KGQT.Commons
@using Newtonsoft.Json
@model OrderDetails
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    //https://mdbootstrap.com/docs/standard/extended/order-details/
}
<ul id="breadcrumbs" class="mb-2">
    <li><a href="/">Trang chủ</a></li>
    <li><a href="/ShippingOrder/Index">Danh sách ký gửi</a></li>
    <li><a>Chi tiết</a></li>
</ul>
<section class="h-100 gradient-custom">
    <div class="container-fluid py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-10 col-md-10 col-sm-12">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <div class="card-header px-4 py-5">
                            <h2 class="text-muted mb-0">
                                Thông tin đơn: <span class="text-uppercase text-danger">@Model.Order.ShippingOrderCode</span>
                                @if (Model.Order.Status < 3)
                                {
                                    <button type="button" onclick="cancel(@Model.Order.ID)" class="btn btn-sm btn-danger float-right">Hủy đơn</button>
                                }
                            </h2>
                            <span class="py-2">Trạng thái đơn: <strong>@PJUtils.ShippingStatus(Model.Order.Status)</strong></span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <!--Start::Thông tin kiện-->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="lead fw-normal mb-0 text-primary text-uppercase">Danh sách Kiện</h3>
                        </div>
                        @foreach (var item in Model.Packs)
                        {
                            <div class="card shadow-0 border mb-4">
                                <div class="card-body p-2">
                                    <div class="row">
                                        <div class="col-md-2 align-self-center">
                                            <div class="col-md-12 text-center d-flex justify-content-center align-items-center">
                                                <h2 class="text-danger mb-0">@item.PackageCode</h2>
                                            </div>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="row justify-content-end fa-sm">
                                                <div class="dropdown p-2"> <button class="btn-sm btn bg-orange text-white">Kiểm tra hàng kho TQ</button></div>
                                                <div class="dropdown dropdown-hover p-2">
                                                    <button class="btn btn-sm px-0 btn-success"
                                                            type="button"
                                                            id="drStt"
                                                            data-mdb-toggle="dropdown"
                                                            aria-expanded="false">
                                                        @PJUtils.ShippingStatus(item.Status))
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="drStt">
                                                        <ul class="timeline">
                                                            @if (item.ReceivedDate != null)
                                                            {
                                                                <li class="timeline-item mb-5">
                                                                    <span class="fw-bold">Đã nhận hàng</span>
                                                                    <p class="text-muted mb-2 fw-bold">@item.ReceivedDate.Value.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                                                </li>
                                                            }

                                                            @if (item.ImportedSGWH != null)
                                                            {
                                                                <li class="timeline-item mb-5">
                                                                    <span class="fw-bold">Đã nhận hàng</span>
                                                                    <p class="text-muted mb-2 fw-bold">@item.ImportedSGWH.Value.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                                                </li>
                                                            }

                                                            @if (item.TransportingToSGWH != null)
                                                            {
                                                                <li class="timeline-item mb-5">
                                                                    <span class="fw-bold">Đã nhận hàng</span>
                                                                    <p class="text-muted mb-2 fw-bold">@item.TransportingToSGWH.Value.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                                                </li>
                                                            }

                                                            @if (item.ExportedCNWH != null)
                                                            {
                                                                <li class="timeline-item mb-5">
                                                                    <span class="fw-bold">Đã nhận hàng</span>
                                                                    <p class="text-muted mb-2 fw-bold">@item.ExportedCNWH.Value.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                                                </li>
                                                            }

                                                            @if (item.ReceivedDate == null && item.ExportedCNWH == null && item.TransportingToSGWH == null && item.ImportedSGWH == null)
                                                            {
                                                                <li class="p-2">
                                                                    Chưa có lịch sự kiện hàng
                                                                </li>
                                                            }
                                                        </ul>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4 text-center d-flex justify-content-center align-items-center flex-column">
                                                    <div class="row"> Cân nặng:  &nbsp; <strong class="text-muted mb-0"> @(item.Weight ?? 0)</strong></div>
                                                </div>
                                                <div class="col-md-4 text-center d-flex justify-content-center align-items-center flex-column">
                                                    <div class="row">
                                                        Đóng gỗ:  &nbsp; <strong class="text-muted mb-0"> 0</strong>
                                                    </div>
                                                    <div class="row"> Qui đổi:  &nbsp; <strong class="text-muted mb-0"> 0</strong></div>
                                                </div>
                                                <div class="col-md-4 text-center d-flex justify-content-center align-items-center flex-column">
                                                    <div class="row">
                                                        Bọt khí:  &nbsp; <strong class="text-muted mb-0">0</strong>
                                                    </div>
                                                    <div class="row"> Qui đổi:  &nbsp; <strong class="text-muted mb-0"> 0</strong></div>
                                                </div>
                                            </div>
                                            <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                            <div class="row d-flex align-items-center">
                                                <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                                    Phí cân nặng:  &nbsp;<p class="text-muted mb-0"> @(item.WeightPrice ?? 0)</p>
                                                </div>
                                                <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                                    Phí Đóng gỗ:  &nbsp;<p class="text-muted mb-0">@(item.WoodPackagePrice ?? 0)</p>
                                                </div>
                                                <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                                    Phí bọt khí:  &nbsp;<p class="text-muted mb-0"> @(item.WeightPrice ?? 0)</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!--End::Thông tin kiện-->
                        <hr />
                        <!--Start: Kê khai-->
                        @if (Model.Order.IsInsurance != null && Model.Order.IsInsurance == true)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h3 class="lead fw-normal mb-0 text-primary text-uppercase">Kê khai</h3>
                            </div>
                            @if (Model.Packs.Count() == 0)
                            {
                                <input type="text" class="form-control" id="txtId" hidden>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="txtLink">Link sản phẩm</label>
                                        <input type="text" class="form-control" id="txtLink">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="txtQty">Số lượng</label>
                                        <input type="text" class="form-control" id="txtQty">
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label for="txtAmount">Giá</label>
                                        <input type="text" class="form-control" id="txtAmount">
                                    </div>
                                    <div class="form-group col-md-1 align-self-end">
                                        <div class="d-flex justify-content-end">
                                            <button type="button" onclick="addDeclare()" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button>
                                        </div>
                                    </div>
                                </div>


                            }

                            <div class="card table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <colgroup>
                                        <col width="50%" />
                                        <col width="20%" />
                                        <col width="15%" />
                                        <col width="15%" />
                                    </colgroup>
                                    <thead>
                                        <tr>
                                            <th>Link sản phẩm</th>
                                            <th>Số lượng</th>
                                            <th>Giá</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Declarations)
                                        {
                                            <tr>
                                                <td><a class="text-truncate d-block" style="max-width:500px !important" target="_blank" href="@item.ProductLink">@item.ProductLink</a></td>
                                                <td>@item.ProductQuantity</td>
                                                <td>@item.ProductPrice</td>
                                                <td>
                                                    @if (Model.Packs.Count() == 0)
                                                    {
                                                        <button class="btn btn-sm btn-primary mr-2" onclick="editDeclare('@Uri.EscapeUriString(JsonConvert.SerializeObject(item))')">
                                                            Sửa
                                                        </button>

                                                        <button class="btn btn-sm btn-danger">Xóa</button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        <!--End:: Kê khai-->
                        <hr />
                        <!--Start::Thông tin đơn-->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="lead fw-normal mb-0 text-uppercase text-primary">Chi tiết đơn</h3>
                        </div>

                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">Phí vận chuyển:</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">@string.Format("{0:N0}",Model.Order.ShippingPrice.HasValue ? Model.Order.ShippingPrice : 0).Replace(",", ".")</span></p>
                        </div>
                        @if (Model.Order.IsWoodPackage != null && Model.Order.IsWoodPackage == true)
                        {
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Phí đóng gỗ:</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">@string.Format("{0:N0}",Model.Order.IsWoodPackagePrice.HasValue ? Model.Order.IsWoodPackagePrice : 0).Replace(",", ".")</span></p>
                            </div>
                        }
                        @if (Model.Order.IsAirPackage != null && Model.Order.IsAirPackage == true)
                        {
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Phí bọt khí:</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">@string.Format("{0:N0}",Model.Order.IsAirPackagePrice.HasValue ? Model.Order.IsAirPackagePrice : 0).Replace(",", ".")</span></p>
                            </div>
                        }
                        @if (Model.Order.IsInsurance != null && Model.Order.IsInsurance == true)
                        {
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Phí bảo hiểm:</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">@string.Format("{0:N0}",Model.Order.IsInsurancePrice.HasValue ? Model.Order.IsInsurancePrice : 0).Replace(",", ".")</span></p>
                            </div>
                        }
                        <!--End::Thông tin đơn-->
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                         style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-between text-white text-uppercase mb-0">
                            Tổng tiền:   <span class="h2 mb-0 ms-2">@string.Format("{0:N0}",Model.Order.TotalPrice.HasValue ? Model.Order.TotalPrice : 0).Replace(",", ".")</span>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    //Hủy đơn
    function cancel(id) {
        $.ajax({
            url: '@Url.Action("Cancel", "ShippingOrder")',
            type: 'Post',
            data: { id },
            // other AJAX options here
            success: function (result) {
                if (!result)
                    helper.showErr('Lỗi!');
                else
                    helper.showSuc('Đã hủy nhận thành công!');
            },
            error: function (xhr, status, err) {
                // error handling
            }
        });
    }

    function addDeclare() {
        let $id = $("#txtId"), $link = $("#txtLink"), $Qty = $("#txtQty"), $amount = $('#txtAmount');
        let id = $id.val(), link = $link.val(), qty = $Qty.val(), amount = $amount.val();

        if (!link || !qty || !amount) {
            helper.showErr('Vui lòng nhập đầy đủ thông tin!')
            return;
        }

        $.ajax({
            url: '@Url.Action("AddDeclare", "ShippingOrder")',
            type: 'Post',
            data: { id, link, qty, amount, shipId: @Model.Order.ID },
            // other AJAX options here
            success: function (result) {
                if (result == -1)
                    helper.showErr('Bạn đã kê khai sản phẩn này rồi!');

                if (result == 0)
                    helper.showErr('Lỗi!');

                if (result == 1)
                    helper.showSuc('Kê khai thành công!');

                if (result == 2)
                    helper.showSuc('Cập nhật thành công!');
            },
            error: function (xhr, status, err) {
                // error handling
            }
        });
    }

    function editDeclare(o) {
        var obj = JSON.parse(decodeURIComponent(o));

        $("#txtId").val(obj.ID);
        $("#txtLink").val(obj.ProductLink);
        $("#txtQty").val(obj.ProductQuantity);
        $('#txtAmount').val(obj.ProductPrice);
    }
</script>