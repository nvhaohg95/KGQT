@model KGQT.Models.tbl_ShippingOrder
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    //https://mdbootstrap.com/docs/standard/extended/order-details/
}
<ul id="breadcrumbs" class="mb-2">
    <li><a href="/">Trang chủ</a></li>
    <li><a href="/ShippingOrder/Index">Danh sách ký gửi</a></li>
    <li><a>Chi tiết</a></li>
</ul>
<section class="h-100 gradient-custom">
    <div class="container-fluid py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-10 col-md-10 col-sm-12">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">Thông tin đơn hàng: <span style="color: #a8729a;">@Model.ShippingOrderCode</span></h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #a8729a;">Kiện</p>
                        </div>
                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0">Samsung Galaxy</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">White</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Capacity: 64GB</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Qty: 1</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">$499</p>
                                    </div>
                                </div>
                                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2">
                                        <p class="text-muted mb-0 small">Track Order</p>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                 style="width: 65%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                                                 aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="d-flex justify-content-between pt-2">
                            <p class="fw-bold mb-0">Chi tiết đơn</p>
                        </div>

                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">Phí vận chuyển:</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">@string.Format("{0:N0}",Model.ShippingPrice.HasValue ? Model.ShippingPrice : 0).Replace(",", ".")</span></p>
                        </div>
                        @if (Model.IsWoodPackage != null && Model.IsWoodPackage == true)
                        {
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Phí đóng gỗ:</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">@string.Format("{0:N0}",Model.IsWoodPackagePrice.HasValue ? Model.IsWoodPackagePrice : 0).Replace(",", ".")</span></p>
                            </div>
                        }
                        @if (Model.IsAirPackage != null && Model.IsAirPackage == true)
                        {
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Phí bọt khí:</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">@string.Format("{0:N0}",Model.IsAirPackagePrice.HasValue ? Model.IsAirPackagePrice : 0).Replace(",", ".")</span></p>
                            </div>
                        }
                        @if (Model.IsInsurance != null && Model.IsInsurance == true)
                        {
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Phí bảo hiểm:</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">@string.Format("{0:N0}",Model.IsInsurancePrice.HasValue ? Model.IsInsurancePrice : 0).Replace(",", ".")</span></p>
                            </div>
                        }
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                         style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-between text-white text-uppercase mb-0">
                            Tổng tiền:   <span class="h2 mb-0 ms-2">@string.Format("{0:N0}",Model.TotalPrice.HasValue ? Model.TotalPrice : 0).Replace(",", ".")</span>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
