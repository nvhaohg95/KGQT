@model List<KGQT.Models.tbl_ShippingOrder>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using KGQT.Models
@using KGQT.Commons
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<ul id="breadcrumbs" class="mb-2">
    <li><a href="/">Trang chủ</a></li>
    <li><a>Danh sách ký gửi</a></li>
</ul>
<div class="row">
    <div class="col-md-12">
        <h1 class="text-danger">Danh sách ký gửi</h1>
    </div>
    <div class="col-md-12 table-responsive">
        <p>
            <a class="btn btn-sm btn-success" asp-action="Create">Thêm mới</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        ShippingOrderCode
                    </th>
                    <th>
                        ShippingMethodName
                    </th>
                    <th>
                        Services
                    </th>
                    <th>
                        Status
                    </th>   
                    <th>
                        TotalPrice
                    </th>
                    <th>
                        Details
                    </th>
                    <th>
                        Username
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShippingOrderCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShippingMethodName)
                        </td>
                        <td>
                            <div class="form-group mb-4">
                                @if (item.IsWoodPackage != null && item.IsWoodPackage == true)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" checked>
                                        <label class="form-check-label" for="cbPack">Đóng gỗ</label>
                                    </div>
                                }
                                @if (item.IsAirPackage != null && item.IsAirPackage == true)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" checked>
                                        <label class="form-check-label" for="cbAirbag">Túi khí</label>
                                    </div>
                                }
                                @if (item.IsInsurancePrice != null && item.IsInsurance == true)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" checked>
                                        <label class="form-check-label" for="cbInsurance">Bảo hiểm</label>
                                    </div>
                                }
                            </div>
                        </td>
                        <td>
                            @Html.Raw(PJUtils.ShippingStatusHtml(item.Status.Value))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>