@model KGQT.Models.temp.UserLogin
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<ul id="breadcrumbs" class="mb-2">
    <li><a href="/">Trang chủ</a></li>
    <li><a class="active">Tài khoản</a></li>
</ul>
<div class="container bg-white py-4">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xl-12 col-sm-12">
            <h1 class="text-primary fw-bold text-uppercase">Chi tiết tài khoản</h1>
        </div>
        <div class="col-lg-12 col-md-12 col-xl-12 col-sm-12">
            <form method="post" action="Create" id="frmShip">
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Mã định danh</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="UserID" readonly value="@Model.UserID">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Tài khoản</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@Model.Username">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Họ</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@Model.FirstName">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Tên</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@Model.LastName">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Ngày sinh</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@(Model.BirthDay != null? Model.BirthDay.Value.ToString("dd/MM/yy") : "dd/MM/yyyy")">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputtext" class="col-sm-2 col-form-label">Giới tính</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" id="gender" value="@(Model.Gender != null ? Model.Gender == 1 ? "Nam" : "Nữ" : "")">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Số ĐT</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@Model.Phone">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@Model.Email">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Địa chỉ</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@Model.Address">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Tiền trong ví</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@Model.Wallet">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Ngày tham gia</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control" value="@Model.CreateDate.Value.ToString("dd/MM/yyy")">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

