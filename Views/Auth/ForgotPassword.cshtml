@model KGQT.Models.temp.ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_PartialView.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10 col-md-7">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row justify-content-center">
                        <div class="col-lg-9">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4 text-uppercase">Quên mật khẩu</h1>
                                </div>
                                @using (Html.BeginForm(FormMethod.Post, new { @class = "user row", @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group col-12">
                                        <div>
                                            <span class="fw-bold">Tài khoản</span>
                                            <span class="text-danger">(*)</span>
                                        </div>
                                        @Html.TextBoxFor(model => model.UserName,"",new { @class="form-control form-control-user border-none rounded", @placeholder="Tài khoản"})
                                        @Html.ValidationMessageFor(model => model.UserName,"",new{ @class="text-danger"})
                                    </div>
                                    <div class="form-group col-12">
                                        <div>
                                            <span class="fw-bold">Email</span>
                                            <span class="text-danger">(*)</span>
                                        </div>
                                        @Html.TextBoxFor(model => model.Email,"",new { @class="form-control form-control-user border-none rounded", @placeholder="Địa chỉ email"})
                                        @Html.ValidationMessageFor(model => model.Email,"",new{ @class="text-danger"})
                                    </div>
                                    <div class="form-group col-12">
                                        <div>
                                            <span class="fw-bold">Mật khẩu mới</span>
                                            <span class="text-danger">(*)</span>
                                        </div>
                                        @Html.TextBoxFor(model => model.Password,"",new { @class="form-control form-control-user border-none rounded", @type="password", @placeholder="Mật khẩu mới" })
                                        @Html.ValidationMessageFor(model => model.Password,"",new { @class="text-danger" })
                                    </div>
                                    <div class="form-group col-12">
                                        <div>
                                            <span class="fw-bold">Nhập lại mật khẩu</span>
                                            <span class="text-danger">(*)</span>
                                        </div>
                                        @Html.TextBoxFor(model => model.ConfirmPassword,"",new { @class="form-control form-control-user border-none rounded", @type="password", @placeholder="Nhập lại mật khẩu" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword,"",new { @class="text-danger" })
                                    </div>
                                    @Html.ValidationMessage("error",new { @class="text-danger" })
                                    <div class="form-group col-12">
                                        <button type="submit" class="btn btn-warning btn-user btn-block">Xác nhận</button>
                                    </div>
                                }
                                <hr />
                                <div class="text-center">
                                    <a class="small" href="register">Quay lại trang Đăng ký</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="login">Quay lại trang Đăng nhập</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

