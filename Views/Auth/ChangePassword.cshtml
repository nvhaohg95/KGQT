@model KGQT.Models.temp.ChangePassword

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_PartialView.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        //Check Show/Hide Password
        $('#show_password').click(function () {
            let _input = $('#txtPassword');
            let _icon = $('#iconShowPassword');
            if (_icon.hasClass('fa fa-eye-slash')) {
                _icon.removeClass('fa fa-eye-slash');
                _icon.addClass('fa fa-eye');
                _input.attr('type', 'text');
            }
            else {
                _icon.removeClass('fa fa-eye');
                _icon.addClass('fa fa-eye-slash');
                _input.attr('type', 'password');
            }
        });

        $('#show_confirmPassword').click(function () {
            let _input = $('#txtConfirmPassword');
            let _icon = $('#iconShowConfirmPassword');
            if (_icon.hasClass('fa fa-eye-slash')) {
                _icon.removeClass('fa fa-eye-slash');
                _icon.addClass('fa fa-eye');
                _input.attr('type', 'text');
            }
            else {
                _icon.removeClass('fa fa-eye');
                _icon.addClass('fa fa-eye-slash');
                _input.attr('type', 'password');
            }
        });
    });
</script>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-19 col-md-6">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row justify-content-center">
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4 text-uppercase">Đổi mật khẩu</h1>
                                </div>
                                @using (Html.BeginForm(FormMethod.Post, new { @class = "user row", @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group col-12">
                                        <div>
                                            <span class="fw-bold">Tài khoản</span>
                                            <span class="text-danger">(*)</span>
                                        </div>
                                        @Html.TextBoxFor(model => model.UserName,"",new { @class="form-control form-control-user border-none rounded", @placeholder="Tài khoản", @readonly=true})
                                        @Html.ValidationMessageFor(model => model.UserName,"",new{ @class="text-danger"})
                                    </div>

                                    <div class="form-group col-12">
                                        <div>
                                            <span class="fw-bold">Mật khẩu cũ</span>
                                            <span class="text-danger">(*)</span>
                                        </div>
                                        <div class="position-relative">
                                            @Html.TextBoxFor(model => model.OldPassword, new { @class="form-control form-control-user border-none rounded", @placeholder="Mật khẩu", @type="password", @id="txtPassword"})
                                            <span class="pass_icon cursor-pointer" id="show_password">
                                                <i class="fa fa-eye-slash" id="iconShowPassword"></i>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.OldPassword,"",new { @class="text-danger" })
                                    </div>

                                    <div class="form-group col-12">
                                        <div>
                                            <span class="fw-bold">Mật khẩu mới</span>
                                            <span class="text-danger">(*)</span>
                                        </div>
                                        <div class="position-relative">
                                            @Html.TextBoxFor(model => model.OldPassword, new { @class="form-control form-control-user border-none rounded", @placeholder="Mật khẩu", @type="password", @id="txtPassword"})
                                            <span class="pass_icon cursor-pointer" id="show_password">
                                                <i class="fa fa-eye-slash" id="iconShowPassword"></i>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.OldPassword,"",new { @class="text-danger" })
                                    </div>
                                    <div class="form-group col-12">
                                        <div>
                                            <span class="fw-bold">Nhập lại mật khẩu</span>
                                            <span class="text-danger">(*)</span>
                                        </div>
                                        <div class="position-relative">
                                            @Html.TextBoxFor(model => model.ConfirmPassword, new { @class="form-control form-control-user border-none rounded", @placeholder="Nhập lại mật khẩu", @type="password", @id="txtConfirmPassword"})
                                            <span class="pass_icon cursor-pointer" id="show_confirmPassword">
                                                <i class="fa fa-eye-slash" id="iconShowConfirmPassword"></i>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword,"",new { @class="text-danger" })
                                    </div>
                                    <div class="form-group col-12 mb-0">
                                        <div class="row justify-content-center">
                                            <button type="submit" class="btn btn-warning btn-user btn-block col-6">Cập nhật</button>
                                        </div>
                                    </div>
                                }
                                <hr />
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

