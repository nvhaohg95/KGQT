@model IEnumerable<KGQT.Models.temp.AccountInfo>
@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .input{
        height: calc(1.5em + 0.75rem + 2px);
        padding: 0.375rem 0.75rem;
        margin-right: 2px;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #6e707e;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #d1d3e2;
        border-radius: 0.35rem;
        outline:none;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
</style>
<div class="container-fluid h-100">
    <div class="row mb-2">
        <ul id="breadcrumbs">
            <li><a>Người dùng</a></li>
            <li><a>Danh sách</a></li>
        </ul>
    </div>
    <div class="row bg-white p-2">
        <div class="col-12 py-2">
            <div class="row">
                <div class="col-6 text-left">
                    <h5 class="text-danger text-uppercase m-0">DANH SÁCH NGƯỜI DÙNG</h5>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <a class="btn btn-success w-100px" href="Create">Thêm mới</a>
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-end mt-2">
                <input type="search" placeholder="Tìm kiếm" class="input" />
                <button type="button" class="btn btn-primary w-100px">Tìm kiếm</button>
            </div>
        </div>
        <div class="col-12">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr class="font-weight-normal">
                        <th scope="col">ID</th>
                        <th scope="col">Họ tên</th>
                        <th scope="col">Ngày sinh</th>
                        <th scope="col">Email</th>
                        <th scope="col">SĐT</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.UserID
                            </td>
                            <td class="text-truncate">
                                <div class="d-flex align-items-center">
                                    <img src="@item.IMG" title="@(item.UserName)" width="40" height="40" class="rounded-circle" />
                                    <span class="ml-2">
                                        @item.UserName
                                    </span>
                                </div>
                                
                            </td>
                            <td>
                                @(item.BirthDay != null ? item.BirthDay.Value.ToString("dd/MM/yyyy") : "")
                            </td>
                            <td class="text-truncate">
                                <span>@item.Email</span>
                            </td>
                            <td>
                                @item.Phone
                            </td>
                            <td>
                                <a class="text-primary" asp-action="detail" asp-route-id="@item.ID">
                                    <i class="far fa-edit"></i>
                                    <span>Xem</span>
                                </a>
                                <a class="text-danger" asp-action="Delete" asp-route-id="@item.ID">
                                    <i class="fas fa-trash-alt"></i>
                                    <span>Xóa</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

