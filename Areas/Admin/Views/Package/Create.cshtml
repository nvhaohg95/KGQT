@model KGQT.Models.tbl_ShippingOrder
@using KGQT.Commons
@{
    ViewData["Title"] = "Thêm kiện";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<ul id="breadcrumbs" class="mb-2">
    <li><a href="/">Trang chủ</a></li>
    <li><a href="/Package/Index">Kiện</a></li>
    <li><a>Chi tiết kiện</a></li>
</ul>
<section class="h-100 gradient-custom">
    <div class="container-fluid py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-10 col-md-10 col-sm-12">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header">
                        <div class="card-header py-2">
                            <h3 class="text-muted mb-0">
                                Thêm kiện cho mã vận đơn: <span class="text-uppercase text-danger">@Model.ShippingOrderCode</span>
                            </h3>
                            <span class="mt-2">Phương thức vận chuyển: <strong>@PJUtils.ShippingMethodName(Model.ShippingMethod.Value)</strong></span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <!--Start::Thông tin kiện-->
                        <div class="col-lg-12 col-md-12 col-xl-12 col-sm-12">
                            <form method="post" action="Create" id="frmShip">
                                <div class="form-group mb-4">
                                    <label class="required" for="txtShipID">Mã kiện</label>
                                    <input type="text" class="form-control" id="txtPackageCode" name="PackageCode" placeholder="Nhập mã vận đơn">
                                </div>
                                <div class="form-group mb-4">
                                    <label class="required" for="txtShipID">Ngày xuất kho TQ</label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="date" class="form-control" id="txtExportDate" name="ExportDate" placeholder="Chọn ngày xuất kho">
                                        </div>
                                        <div class="col-md-6">
                                            <input type="time" class="form-control" id="txtExportTime" name="ExportDate" placeholder="Chọn giờ xuất kho">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-4">
                                    <label class="required" for="txtWeight">Mã kiện</label>
                                    <input type="text" class="form-control" id="txtWeight" name="Weight" placeholder="Cân nặng">
                                </div>
                                @if (Model.IsWoodPackage != null && Model.IsWoodPackage == true)
                                {
                                    <div class="form-group mb-4">
                                        <label class="required" for="txtWoodPackage">Đóng gỗ</label>
                                        <input type="text" class="form-control" id="txtWoodPackage" name="WoodPackageWeight" placeholder="Kích thước">
                                    </div>
                                }
                                @if (Model.IsAirPackage != null && Model.IsAirPackage == true)
                                {
                                    <div class="form-group mb-4">
                                        <label class="required" for="txtAirPackage">Bọt khí</label>
                                        <input type="text" class="form-control" id="txtAirPackage" name="AirPackageWeight" placeholder="Kích thước">
                                    </div>
                                }
                                <div class="row justify-content-center">
                                    <button type="reset" class="btn btn-danger mr-2">Nhập lại</button>
                                    <button type="button" class="btn btn-success" onclick="insert()">Lưu</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>