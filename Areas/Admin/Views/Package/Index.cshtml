<div id="copied-success" class="copied"><span>Đã copy ✅!</span></div>
<script>
    function getPage(pageIndex) {
        var totalPage = @totalPage;
        if (pageIndex <= 0 || pageIndex > totalPage)
            return;
        if (!location.href.includes("page=")) {
            if (location.href.charAt(location.href.length - 1) == "=")
                location.href += `&page=${pageIndex}`;
            else
                location.href += `?page=${pageIndex}`;
        }
        else
            location.href = location.href.replace(`page=${@(page)}`, `page=${pageIndex}`);
    }

    function importFile(type) {
        $('#exportCNWH').click();
    }

    function exportCNWH() {
        let file = $("#exportCNWH")[0].files;
        let sheet = $("#txtSheet").val();
        let form = new FormData();
        form.append("file", file[0]);
        form.append("sheet", sheet);
        $.ajax({
            url: '/admin/package/ExportChinaWareHouse',
            type: 'POST',
            dataType: 'json',
            data: form,
            contentType: false,
            processData: false,
            success: function (res) {
                let status = res.status;
                if (status == -2) {
                    helper.showErr('không tìm thấy Sheet vừa nhập, vui lòng kiểm tra lại');
                    return;
                }

                if (status == -1) {
                    helper.showErr('Lỗi không đọc được thông tin file');
                    return;
                }

                if (status == 0) {
                    helper.showWarn('Không tìm thấy kiện nào khớp với file vừa chọn');
                    return;
                }

                if (status == 1) {
                    if (res.path) {
                        Swal.fire({
                            title: "Cập nhật thành công!",
                            text: "Bạn có muốn tải file excel đối chiếu?",
                            icon: "success",
                            showCancelButton: true,
                            confirmButtonColor: "#3085d6",
                            cancelButtonColor: "#d33",
                            cancelButtonText:"Không tải",
                            confirmButtonText: "Tải file"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                var a = document.createElement('a');
                                a.href = "/admin/package/downloadfile?filepath=" + res.path;
                                a.dispatchEvent(new MouseEvent('click'));
                            }else{
                                window.location.reload();
                            }
                        });
                       
                    } else {
                        helper.showSuc('Cập nhật thành công', true);
                        return;
                    }
                }
                $("#uploadExcel")[0].reset();

            }, error: function (e) {
                console.log(e);
            }
        });
    }

    function cancel(id) {
        $.ajax({
            url: '/admin/Package/Cancel',
            type: 'POST',
            data: { id },
            // other AJAX options here
            success: function (result) {
                if (!result)
                    helper.showErr('Hủy thất bại!')
                else
                    helper.showSuc('Hủy đơn thành công!')
            },
            error: function (xhr, status, err) {
                // error handling
            }
        });
    }

    $(document).ready(function () {
        $('.btn-copy').off('click').on('click', function () {
            let text = $(this).data('value');
            $(this).select();
            navigator.clipboard.writeText(text);
            $('#copied-success').css('opacity', '1');
            setTimeout(function () { $('#copied-success').css("opacity", 0) }, 500);
        })
    })
</script>