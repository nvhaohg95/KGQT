        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white text-uppercase fw-bold" id="exampleModalLongTitle"><i class="fas fa-file-excel mr-2"></i>Đọc dữ liệu từ file excel</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="uploadExcel">
                    <div class="form-group mb-4">
                        <label class="required" for="exportCNWH">File Excel:</label>
                        @*<input type="file" id="exportCNWH" hidden onchange="exportCNWH(this)" />*@
                        <input type="file" class="form-control" id="exportCNWH">
                    </div>
                    <div class="form-group mb-4">
                        <label class="required" for="txtShipID">Tên Sheet:</label>
