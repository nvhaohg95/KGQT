@model KGQT.Models.temp.FeeWeightVM

@{
    ViewData["Title"] = "Phí vận chuyển";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid h-100">
    <div class="row mb-2">
        <ul id="breadcrumbs">
            <li><a href="/">Cấu hình</a></li>
            <li><a>Phí vận chuyển</a></li>
        </ul>
    </div>
    <div class="row bg-white p-2">
        <div class="col-12 ">
            <div class="d-flex align-items-center justify-content-between">
                <div class="text-start">
                    <h5 class="text-danger text-uppercase m-0">PHÍ VẬN CHUYỂN</h5>
                </div>
                <div class="d-flex align-items-center justify-content-end py-2">
                    <button class="btn btn-success w-100px" data-toggle="modal" data-target="#exampleModal">Thêm mới</button>
                </div>
            </div>
        </div>
        <div class="col-12">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr class="font-weight-normal">
                        <th scope="col">STT</th>
                        <th scope="col">Cân nặng</th>
                        <th scope="col">Giá tiền</th>
                        <th scope="col">Gói vận chuyển</th>
                        <th scope="col">Thao tác</th>

                    </tr>
                </thead>
                <tbody class="h-100 overflow-auto">
                    @{
                        int i = 0;
                        foreach (var item in Model.ListFeeWeight)
                        {
                            i = i + 1;
                            <tr>
                                <td>
                                    <span>@i</span>
                                </td>
                                <td>
                                    <span>@("Từ " + item.WeightFrom + " đến " + item.WeightTo + "kg")</span>
                                </td>
                                <td>
                                    @string.Format("{0:N0}",item.Amount != null ? item.Amount : 0).Replace(",", ".")
                                    <sup>đ&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;</sup>
                                </td>
                                <td>
                                    @switch (item.Type)
                                    {
                                        case 1:
                                            <span>Tuyến bay nhanh</span>
                                            break;
                                        case 2:
                                            <span>Tuyến bay thường</span>
                                            break;
                                        case 3:
                                            <span>Tuyến bộ</span>
                                            break;
                                        case 4:
                                            <span>Tuyến lô</span>
                                            break;
                                        case 5:
                                            <span>Tuyến biển</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a class="text-primary" asp-action="index" asp-route-id="@item.ID">
                                        <i class="far fa-edit"></i>
                                        <span>Xem</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row bg-white p-2">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <span>
                Tổng số:&nbsp
                <b>@(ViewData["total"] != null ? ViewData["total"] : 0)</b>
            </span>
        </div>
        <div class ="col-lg-6 col-md-6 col-sm-6">
            <nav class="d-flex justify-content-end">
                @{
                    int page = int.Parse(ViewData["page"].ToString());
                    int totalPage = int.Parse(ViewData["totalPage"].ToString());
                    if(page < totalPage)
                    {
                        <ul class="pagination m-0">
                            @if (page > 1)
                            {
                                <li class="page-item" disable="true">
                                    <a class="page-link" onclick="getPage('Previous')" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                            }
                            <li class="page-item">
                                <a class="page-link" id="pageNumber">
                                    @ViewData["page"]
                                </a>
                            </li>
                            @if (page < totalPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" onclick="getPage('Next')" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                }
            </nav>
        </div>
    </div>

</div>

<!-- popup -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="exampleModalLabel">Thêm Phí Vận chuyển</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="container-fluid" id="formFeeWeight">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 form-group">
                            <div>
                                <span class="fw-bold">Tuyến vận chuyển</span>
                                <span class="text-danger">(*)</span>
                            </div>
                            @Html.DropDownListFor(model => model.FeeWeight.Type,ViewBag.Type as SelectList,new { @class="form-control form-control-user border-none rounded",@name="Type" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 form-group">
                            <div>
                                <span class="fw-bold">Cân nặng từ</span>
                                <span class="text-danger">(*)</span>
                            </div>
                            @Html.TextBoxFor(model => model.FeeWeight.WeightFrom,new { @class="form-control form-control-user border-none rounded",@name="WeightFrom" , @autofocus="autofocus", @placeholder="Từ" })
                        </div>
                        <div class="col-md-6 col-sm-12 form-group">
                            <div>
                                <span class="fw-bold">Cân nặng đến</span>
                                <span class="text-danger">(*)</span>
                            </div>
                            @Html.TextBoxFor(model => model.FeeWeight.WeightTo,new { @class="form-control form-control-user border-none rounded",@name="WeightTo" , @autofocus="autofocus", @placeholder="Đến" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 form-group">
                            <div>
                                <span class="fw-bold">Giá tiền</span>
                                <span class="text-danger">(*)</span>
                            </div>
                            @Html.TextBoxFor(model => model.FeeWeight.Amount,"",new { @class="form-control form-control-user border-none rounded",@name="Amount", @placeholder="Giá tiền" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary w-100px" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary w-100px" onclick=" insert()">Lưu</button>
            </div>
        </div>
    </div>
</div>
<script>
    function insert() {
        var data = helper.form2Object($('#formFeeWeight').serializeArray());
        if (!data["FeeWeight.WeightFrom"]) {
            helper.showErr('Vui lòng nhập cân nặng nhỏ nhất!');
            return
        }

        if (!data["FeeWeight.WeightTo"]) {
            helper.showErr('Vui lòng nhập cân nặng lớn nhất!');
            return
        }

        if (!data["FeeWeight.Amount"]) {
            helper.showErr('Vui lòng nhập giá tiền!');
            return;
        }
        var obj = {
            Type:data["FeeWeight.Type"],
            WeightFrom: data["FeeWeight.WeightFrom"],
            WeightTo: data["FeeWeight.WeightTo"],
            Amount: data["FeeWeight.Amount"]
        }
        $.ajax({
            url: "/Admin/FeeWeight/create",
            type: 'POST',
            data: obj ,
            // other AJAX options here
            success: function (reponse) {
                if (!reponse)
                {
                    helper.showErr('Thêm mới không thành công!')
                }
                else
                    helper.showSuc('Thêm mới thành công!')
            },
            error: function (xhr, status, err) {
                if (!reponse)
                    helper.showErr('Phát sinh lỗi.!')
            }
        });
    }
</script>