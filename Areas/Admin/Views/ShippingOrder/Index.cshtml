@model List<KGQT.Models.tbl_ShippingOrder>
@using KGQT.Models.temp
@using KGQT.Commons
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int status = 0;
    string searchText = "";
    DateTime? fromDate = null;
    DateTime? toDate = null;
}
<script>
    function onClick(status) {
        $.ajax({
            url: '@Url.Action("Index","ShippingOrder")?status=2',
            type: 'POST',
            success: function (result) {
                debugger
            },
            error: function (xhr, status, err) {
                debugger
            }
        });
    }
</script>
<div class="container-fluid h-100 position-relative">
    <div class="row">
        <ul id="breadcrumbs">
            <li><a href="/admin">Trang chủ</a></li>
            <li><a href="#">Danh sách ký gửi</a></li>
        </ul>
    </div>
    <div class="row p-2">
        <div class="d-flex flex-column">
            <div class="row bg-white px-2 py-2">
                <div class="col">
                    <div class="row">
                        <div class="col d-flex">
                            <div class="w-150px">
                                <span class="fw-bold ">
                                    Trạng thái đơn:
                                </span>
                            </div>
                            <div>
                                <ul class="nav">
                                    <li class="nav-item" onclick="onClick(1)">
                                        <a class="nav-link text-capitalize py-0">Ký gửi</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(2)">
                                        <a class="nav-link text-capitalize py-0">Chờ duyệt</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(3)">
                                        <a class="nav-link text-capitalize py-0">Chờ giao</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(4)">
                                        <a class="nav-link text-capitalize py-0" href="#">Đang giao</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(5)">
                                        <a class="nav-link text-capitalize py-0" href="#">Người bán giao</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(6)">
                                        <a class="nav-link text-capitalize py-0" href="#">Hàng về kho TQ</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(7)">
                                        <a class="nav-link text-capitalize py-0" href="#">Vận chuyển quốc tế</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(8)">
                                        <a class="nav-link text-capitalize py-0" href="#">Đã nhận hàng</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(9)">
                                        <a class="nav-link text-capitalize py-0" href="#">Đã hủy</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(10)">
                                        <a class="nav-link text-capitalize py-0" href="#">Thất lạc</a>
                                    </li>
                                    <li class="nav-item" onclick="onClick(11)"> 
                                        <a class="nav-link text-capitalize py-0" href="#">Không nhận hàng</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <form class="row py-2 border-dashed">
                        <div class="col-5">
                            <div>
                                <span class="fw-bold">Nhập mã đơn:</span>
                            </div>
                            <div>
                                @Html.TextBoxFor(model => searchText,new { @type="text",@class="form-control w-100",@placeholder="Nhập mã đơn hàng"})
                            </div>
                        </div>
                        <div class="col-7">
                            <div class="row col">
                                <span class="fw-bold">Thời gian tạo:</span>
                            </div>
                            <div class="row">
                                <div class="col">
                                    @Html.TextBoxFor(model => fromDate,new { @type="date",@class="form-control w-100"})
                                </div>
                                <div class="col">
                                    @Html.TextBoxFor(model => toDate,new { @type="date",@class="form-control w-100"})
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row py-2">
                        <div class="col">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <span class="text-primary cursor-pointer">
                                        <i class="fas fa-chevron-down fa-xs"></i>
                                        Mở rộng tìm kiếm
                                    </span>
                                </div>
                                <div>
                                    <span class="cursor-pointer mr-2">
                                        <i class="fas fa-sync fa-xs"></i>
                                        Làm mới bộ lọc
                                    </span>
                                    <button class="btn btn-sm btn-primary">
                                        Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="">
                    <form method="post" action="Search">
                        <div class="d-flex align-items-center justify-content-end">
                            <div class="input-group w-300px">
                                @Html.TextBoxFor(Model => searchText,new{ @type="text", @class="form-control",@id="inputSearch", @placeholder="Tìm kiếm" })
                                @*<input type="text" class="form-control" id="inputSearch" placeholder="Tìm kiếm"/>*@
                                <div class="input-group-append">
                                    <button type="submit" class="input-group-text btn">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="col-12 mt-2">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th class="font-weight-normal text-left" scope="col">
                                    MĐH
                                </th>
                                <th class="font-weight-normal text-center" scope="col">
                                    Ngày tạo
                                </th>
                                <th class="font-weight-normal text-center" scope="col">
                                    Ngày dự kiến
                                </th>
                                <th class="font-weight-normal text-left" scope="col">
                                    Khách hàng
                                </th>
                                <th class="font-weight-normal text-center" scope="col">
                                    Tổng giá
                                </th>
                                <th class="font-weight-normal text-center" scope="col">
                                    Trạng thái
                                </th>
                                <th class="font-weight-normal text-center" scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-light">
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.ShippingOrderCode)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.DateExpectation)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.TotalPrice)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td class="text-center">
                                        <a class="text-primary" asp-action="Details" asp-route-id="@item.ID">
                                            <i class="far fa-edit"></i>
                                            <span>Xem</span>
                                        </a> |
                                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.ID">
                                            <i class="fas fa-trash-alt"></i>
                                            <span>Xóa</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between align-items-center bg-white p-2">
                    <div class="">
                        <span>Tổng số:&nbsp<b>@Model.Count</b></span>
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination m-0">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
   </div>
</div>
