@model List<KGQT.Models.tbl_ShippingOrder>
@using KGQT.Models.temp
@using KGQT.Commons
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string ID = "";
    DateTime? fromDate = null;
    DateTime? toDate = null;
}
<div class="container-fluid h-100 position-relative">
    <div class="row">
        <ul id="breadcrumbs">
            <li><a href="/admin">Trang chủ</a></li>
            <li><a href="#">Danh sách ký gửi</a></li>
        </ul>
    </div>
    <div class="row p-2">
        <div class="d-flex flex-column">
            <div class="row bg-white px-2 py-2">
                <div class="col">
                    <div class="row">
                        <div class="col d-flex">
                            <div class="w-150px">
                                <span class="fw-bold ">
                                    Trạng thái đơn:
                                </span>
                            </div>
                            <div>
                                <ul class="nav">
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=1">Ký gửi</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=2">Chờ duyệt</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=3">Chờ giao</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=4">Đang giao</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=5">Người bán giao</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=6">Hàng về kho TQ</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=7">Vận chuyển quốc tế</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=8">Đã nhận hàng</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=9">Đã hủy</a>
                                    </li>
                                    <li class="nav-item py-2">
                                        <a class="nav-link text-capitalize py-0" href="?status=10">Thất lạc</a>
                                    </li>
                                    <li class="nav-item py-2"> 
                                        <a class="nav-link text-capitalize py-0" href="?status=11">Không nhận hàng</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row  pb-2 border-dashed">
                        <form class="col-12 row" id="myform" method="get">
                            <div class="col-5">
                                <div>
                                    <span class="fw-bold" id="">Nhập mã đơn:</span>
                                </div>
                                <div>
                                    @Html.TextBoxFor(model => ID,new { @type="text",@class="form-control w-100",@placeholder="Nhập mã đơn hàng"})
                                </div>
                            </div>
                            <div class="col-7">
                                <div class="row col">
                                    <span class="fw-bold">Thời gian tạo:</span>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        @Html.TextBoxFor(model => fromDate,new { @type="date",@class="form-control w-100"})
                                    </div>
                                    <div class="col-6">
                                        @Html.TextBoxFor(model => toDate,new { @type="date",@class="form-control w-100"})
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 py-2">
                                <div class="col">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <span class="text-primary cursor-pointer">
                                                <i class="fas fa-chevron-down fa-xs"></i>
                                                Mở rộng tìm kiếm
                                            </span>
                                        </div>
                                        <div>
                                            <span class="cursor-pointer mr-2" id="resetForm">
                                                <a href="index" class="text-decoration-none">
                                                    <i class="fas fa-sync fa-xs"></i>
                                                    Làm mới bộ lọc
                                                </a>
                                            </span>
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                Tìm kiếm
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        @*@using (Html.BeginForm(FormMethod.Post, new { @class = "col-12 row", @id = "myform" }))
                        {
                            
                        }*@
                       
                    </div>
                </div>
            </div>
            <div class="row flex-columns bg-white mt-2 ">
                <div class="col-12">
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <div>
                            <h5 class="text-danger text-uppercase m-0">Danh sách đơn ký gửi</h5>
                        </div>
                        <div class="d-flex align-items-center justify-content-end py-2">
                            <a class="btn btn-sm  btn-primary" asp-action="Create" asp-method="post">
                                <i class="fas fa-file-excel fa-lg"></i>
                                Import
                            </a>
                            <a class="btn btn-sm btn-light mx-2" asp-action="Create" asp-method="post">
                                <i class="fas fa-file-upload fa-lg" style="color: #d0d3d8;"></i>
                                Export
                            </a>
                            <a class="btn btn-sm btn-primary" asp-action="Create" asp-method="post">Tạo mới</a>
                        </div>
                    </div>
                </div>
            <div class="col-12 mt-2">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th class="font-weight-normal text-left" scope="col">
                                    MĐH
                                </th>
                                <th class="font-weight-normal text-center" scope="col">
                                    Ngày tạo
                                </th>
                                <th class="font-weight-normal text-center" scope="col">
                                    Ngày dự kiến
                                </th>
                                <th class="font-weight-normal text-left" scope="col">
                                    Khách hàng
                                </th>
                                <th class="font-weight-normal text-center" scope="col">
                                    Tổng giá
                                </th>
                                <th class="font-weight-normal text-center" scope="col">
                                    Trạng thái
                                </th>
                                <th class="font-weight-normal text-center" scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-light">
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.ShippingOrderCode)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.DateExpectation)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.TotalPrice)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td class="text-center">
                                        <a class="text-primary" asp-action="Details" asp-route-id="@item.ID">
                                            <i class="far fa-edit"></i>
                                            <span>Xem</span>
                                        </a> |
                                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.ID">
                                            <i class="fas fa-trash-alt"></i>
                                            <span>Xóa</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between align-items-center bg-white p-2">
                    <div class="">
                        <span>Tổng số:&nbsp<b>@Model.Count</b></span>
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination m-0">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
   </div>
</div>
<script>
    $(document).ready(function () {
        $("#resetForm").click(function () {
            $(':input', '#myform')
                .not(':button, :submit, :reset, :hidden')
                .val('')
        });
    });
</script>

